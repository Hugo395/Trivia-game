<link rel="stylesheet" href="http://www.marghoobsuleman.com/mywork/jcomponents/image-dropdown/samples/css/msdropdown/dd.css">
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<script src="http://www.marghoobsuleman.com/mywork/jcomponents/image-dropdown/samples/js/msdropdown/jquery.dd.min.js"></script>

 <div class="container">
  <form id="form"action="/profile" method="POST" enctype="multipart/form-data" class="px-4 py-3">


{{#if user}}
  <h3>Welcome, {{user.username}}</h3>


 <div class="form-group">
  <label for ="email">Email</label>
  <input id="email" class="form-control" type="text" name="email" placeholder="johndoe@gmail.com" value="{{user.email}}"  style="text-align: center;">
  </div>

  <div class="form-group">
  <label for ="address">Address</label>
  <input id="address" class="form-control" type="text" name="address" value="{{user.address}}" placeholder="Your Address" style="text-align: center;">
  </div>

<div class="form-group">
  <label for="dateOfBirth">Date of Birth</label>
  <input id="dateOfBirth" class="form-control" type="Date" name="dateOfBirth" value="{{user.dateOfBirth}}" placeholder="1990-01-01" style="text-align: center;">
</div>

<div class="form-group">
  <label>Avatar</label>
  <select name="avatar" id="menu" class="form-control" value="{{user.avatar}}">
    <option value=""></option>
    <option value="https://api.adorable.io/avatars/100/avatar1@adorable.io.png" title="https://api.adorable.io/avatars/100/avatar1@adorable.io.png"></option>
    <option value="https://api.adorable.io/avatars/100/avatar1@adorable.io.png" title="https://api.adorable.io/avatars/100/avatar2@adorable.io.png"></option>
    <option value="https://api.adorable.io/avatars/100/avatar1@adorable.io.png" title="https://api.adorable.io/avatars/100/avatar3@adorable.io.png"></option>
    <option value="https://api.adorable.io/avatars/100/avatar1@adorable.io.png" title="https://api.adorable.io/avatars/100/avatar4@adorable.io.png"></option>
    <option value="https://api.adorable.io/avatars/100/avatar1@adorable.io.png" title="https://api.adorable.io/avatars/100/avatar5@adorable.io.png"></option>
    <option value="https://api.adorable.io/avatars/100/avatar1@adorable.io.png" title="https://api.adorable.io/avatars/100/avatar6@adorable.io.png"></option>
  </select>
  </div>

<div class="form-group" > 
  <label>Photo</label>
  <input type="file" name="photo" class="form-control" style="text-align: center;" >
</div>

<div class="form-group">
    <button type="submit" class="btn btn-primary" >Update Account</button>
</div>
</form>

<div>
  <form method="get" action="/main">
    <button class="btn btn-primary" type="submit">GET SOME NUTS AND GO TO PLAY</button>
</form>
</div>
{{/if}}
</div>